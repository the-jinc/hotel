{
  "name": "hotel-backend",
  "description": "Hotel Management System Backend",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:seed": "tsx src/scripts/seed.ts",
    "db:seed-admin": "tsx src/scripts/seedAdmin.ts",
    "db:reset": "pnpm run db:push && pnpm run db:seed"
  },
  "keywords": [
    "hotel",
    "management",
    "api",
    "hono"
  ],
  "author": "Abdeta Terefe",
  "license": "MIT",
  "dependencies": {
    "@hono/node-server": "^1.13.1",
    "@hono/zod-validator": "^0.7.3",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.44.6",
    "hono": "^4.6.3",
    "postgres": "^3.4.4",
    "prom-client": "^15.1.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/node": "^22.7.4",
    "drizzle-kit": "^0.31.5",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2"
  }
}
